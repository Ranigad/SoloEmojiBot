{
    "defaultSeverity": "error",
    "linterOptions": {
        "exclude": [
            "src/migration/**"
        ]
    },
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "trailing-comma": false,
        "member-access": false,
        "variable-name": {
            "options": [
                "ban-keywords"
            ]
        },
        "object-literal-sort-keys": false,
        "forin": false,
        "max-line-length": [true, 150],
        "prefer-const": false,
        "no-empty": false
    },
    "rulesDirectory": []
}